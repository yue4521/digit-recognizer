[flake8]
# Pythonコードの品質をチェックするツール
max-line-length = 88
extend-ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503   # line break before binary operator
exclude = 
    .git,
    __pycache__,
    venv,
    .venv,
    build,
    dist,
    *.egg-info
per-file-ignores = 
    __init__.py:F401